<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f0f4f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elitedrivingschoolsystemormcoursework.controller.PaymentManageController">
    <children>
        <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="760.0" prefWidth="1160.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Payments Details">
                    <font>
                        <Font name="Tahoma Bold" size="25.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <VBox prefHeight="650.0" prefWidth="1160.0" VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tblPayment" onMouseClicked="#onClickTable" prefHeight="588.0" prefWidth="1140.0" style="-fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colPaymentId" prefWidth="75.0" text="Payment Id" />
                                <TableColumn fx:id="colPaymentDate" prefWidth="75.0" text="Payment Date" />
                                <TableColumn fx:id="colAmount" prefWidth="75.0" text="Amount" />
                                <TableColumn fx:id="colPaymentMethod" prefWidth="75.0" text="Payment Method" />
                                <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
                                <TableColumn fx:id="colStudentId" prefWidth="75.0" text="Student Id" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="38.0" prefWidth="150.0" style="-fx-background-color: #2980b9; -fx-background-radius: 5;" text="Add Payments" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#btnDeleteOnAAction" prefHeight="38.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 5;" text="Delete Payments" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <padding>
                                <Insets right="20.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                </VBox>
            </children>
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.1" />
                    </color>
                </DropShadow>
            </effect>
        </VBox>
    </children>
</AnchorPane>
